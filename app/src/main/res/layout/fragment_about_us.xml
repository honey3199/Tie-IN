<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".views.AboutUsFragment">

    <TextView
        android:id="@+id/contact_form_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_20"
        android:text="About Us"
        android:textColor="@color/theme_color"
        android:textSize="40sp"
        android:typeface="serif" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_40"
        android:layout_marginEnd="@dimen/margin_20"
        android:text="Tie-IN is online marketplace, connecting customer and suppliers."
        android:textColor="@color/black"
        android:textSize="16sp"
        android:typeface="normal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_20"
        android:layout_marginEnd="@dimen/margin_20"
        android:text="One customer/supplier can see other suppliers details and then can reach to them through call or map."
        android:textColor="@color/black"
        android:textSize="16sp"
        android:typeface="normal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_20"
        android:layout_marginEnd="@dimen/margin_20"
        android:text="@string/tie_in_focuses_on_providing_a_platform_to_small_medium_enterprises_smes_large_enterprises_as_well_as_individuals_the_company_s_mission_is_to_make_doing_business_easy"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:typeface="normal" />

</LinearLayout>