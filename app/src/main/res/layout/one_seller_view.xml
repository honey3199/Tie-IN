<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@mipmap/ic_launcher_round"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/tv_seller_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/iv_logo"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingLeft="@dimen/margin_10"/>

    <ImageView
        android:id="@+id/iv_location"
        android:layout_width="@dimen/margin_24"
        android:layout_height="@dimen/margin_24"
        android:src="@drawable/ic_location"
        app:layout_constraintStart_toEndOf="@id/iv_logo"
        app:layout_constraintTop_toBottomOf="@id/tv_seller_name"
        android:padding="@dimen/margin_4"/>

    <TextView
        android:id="@+id/tv_seller_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aslali"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/iv_location"
        app:layout_constraintTop_toBottomOf="@id/tv_seller_name" />

    <ImageView
        android:id="@+id/iv_gst"
        android:layout_width="@dimen/margin_24"
        android:layout_height="@dimen/margin_24"
        android:src="@drawable/ic_gst"
        app:layout_constraintStart_toEndOf="@id/iv_logo"
        app:layout_constraintTop_toBottomOf="@id/iv_location"
        android:padding="@dimen/margin_4"/>

    <TextView
        android:id="@+id/tv_seller_gst_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GAHDJ52263SHSHHS"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/iv_gst"
        app:layout_constraintTop_toBottomOf="@id/iv_location" />


</androidx.constraintlayout.widget.ConstraintLayout>